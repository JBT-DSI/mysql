@PACKAGE_INIT@

set(BOOST_MYSQL_STANDALONE @BOOST_MYSQL_STANDALONE@)

include(CMakeFindDependencyMacro)


find_dependency(Threads REQUIRED)
find_dependency(OpenSSL REQUIRED)

if(BOOST_MYSQL_STANDALONE)
    list(APPEND CMAKE_MODULE_PATH ${CMAKE_CURRENT_LIST_DIR})
    find_dependency(BoostMysqlStandaloneAsio REQUIRED)
else()
    find_dependency(Boost 1.75.0 REQUIRED COMPONENTS system)
endif()

include("${CMAKE_CURRENT_LIST_DIR}/boost_mysql-targets.cmake")
